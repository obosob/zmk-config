      layers = <MAIN>;
    };
    combo_9 {
      timeout-ms = <60>;
      // O L
      key-positions = <8 18>;
      bindings = <&kp N9>;
      layers = <MAIN>;
    };
    combo_0 {
      timeout-ms = <60>;
      // P ;
      key-positions = <9 19>;
      bindings = <&kp N0>;
      layers = <MAIN>;
    };
    combo_lprn {
      timeout-ms = <60>;
      // D F
      key-positions = <12 13>;
      // (
      bindings = <&kp LPAR>;
      layers = <MAIN>;
    };
    combo_rprn {
      timeout-ms = <60>;
