#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define MAIN 0
#define NUM  1
#define NAV  2
#define FN   3

&mt {
    flavor = "tap-preferred";
    tapping_term_ms = <180>;
    quick_tap_ms = <180>;
};

/ {
  conditional_layers {
    compatible = "zmk,conditional-layers";
    tri_layer {
      if-layers = <NUM NAV>;
      then-layer = <FN>;
    };
  };

  combos {
    compatible = "zmk,combos";

    combo_1 {
      timeout-ms = <60>;
      // Q A
      key-positions = <0 10>;
      bindings = <&kp N1>;
      layers = <MAIN>;
    };
    combo_2 {
      timeout-ms = <60>;
      // W S
      key-positions = <1 11>;
      bindings = <&kp N2>;
      layers = <MAIN>;
    };
    combo_3 {
      timeout-ms = <60>;
      // E D
      key-positions = <2 12>;
      bindings = <&kp N3>;
      layers = <MAIN>;
    };
    combo_4 {
      timeout-ms = <60>;
      // R F
      key-positions = <3 13>;
      bindings = <&kp N4>;
      layers = <MAIN>;
    };
    combo_5 {
      timeout-ms = <60>;
      // T G
      key-positions = <4 14>;
